{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "out/test/desktop",
    "rootDir": "src/test",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "mocha",
      "node",
      "vscode"
    ]
  },
  "include": [
    "src/test/suite/desktop/**/*.ts",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "src/test/suite/web/**/*.ts"
  ]
}