{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "outDir": "../out/test/web",
    "rootDir": "../src/",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "mocha",
      "vscode"
    ]
  },
  "include": [
    "../src/test/suite/web/**/*.ts",
    "../src/test/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../out",
    "../dist",
    "../src/test/suite/desktop/**/*.ts"
  ]
}